@model UserRegistrationViewModel
<div class="register-container">

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <h4>Register</h4>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.Partial("_ValidationSummary")
                            @using (Html.BeginForm("RegisterUser", "UserRegistration", FormMethod.Post))
    {
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-group">
                            
                                @Html.TextBoxFor(model => model.Username, new { @class = "RegFields", @placeholder = "  Username" })
                                <i class="fa fa-check" aria-hidden="true" id="username_available_sign" style="display:none; font-size:16px;"></i>
                                <i class="fa fa-times" aria-hidden="true" id="username_unavailable_sign" style="display:none; font-size:16px;"></i>
                        
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "RegFields", @placeholder = "  Email" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Firstname, new { @class = "RegFields", @placeholder = "  First Name" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Lastname, new { @class = "RegFields", @placeholder = "  Last Name" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Password, new { @class = "RegFields", @placeholder = "  Password" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "RegFields", @placeholder = "  Confirm Password" })
                        </div>
                        <div>
                            <input type="submit" id="Click" value="Register" class="btn-register1" />
                            <a asp-action="Login"
                               asp-controller="Account"
                               asp-route-returnUrl="@Model.ReturnUrl">
                                <input type="button" class="btn-cancel" value="Cancel" />
                            </a>
                        </div>
                        }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
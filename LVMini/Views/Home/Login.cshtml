    ViewData["Title"] = "Login";
}
<div class="login-box">
    <h1>Login Here</h1>
    <form action="http://localhost:49649/" method="post" onSubmit="return checkForm(this);" name="form">
        <p>Username</p>
        <input type="text" name="usr" placeholder="Username" required><br>

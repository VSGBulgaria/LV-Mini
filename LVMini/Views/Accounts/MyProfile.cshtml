@model LVMini.Models.MyProfileModel
@{
    ViewData["Title"] = "MyProfile";
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>

<h2 style="color:white">Edit Your Profile</h2>
<hr />
<div class="row">
    <div class="fields col-lg-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="fields form-horizontal well">
                <h4 class="text-center" style="color:white;">My profile</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-4", style = "font-weight:bold;" })
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.Email, Model.Email, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-4", style = "font-weight:bold;" })
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.FirstName, Model.FirstName, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-4", style = "font-weight:bold;" })
                    <div class="col-md-1">
                        @Html.LabelFor(model => model.LastName, Model.LastName, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-12">
                        <input id="btnEdit" type="button" value="Edit" class="btn btn-primary btn-lg btn3d" />
                    </div>
                </div>
            </div>
        }
    </div>
    <div id="editMyProfile" class="fields col-lg-6 hidden">
        @using (Html.BeginForm("MyProfile", "Accounts", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class=" fields form-horizontal well">
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-sm-4" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = Model.Email })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstName, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", placeholder = Model.FirstName })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.LastName, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", placeholder = Model.LastName })
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-primary btn-lg btn3d" id="saveMyProfileChangesButton">Save changes</button>
                    <input type="button" class="btn btn-danger btn-lg btn3d" value="Cancel" id="Cancel" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

}